@page
@model MaktabNews.RazorPages.Areas.Account.Pages.LoginModel
@{
}

<div class="sign widget ">
    <div class="section-title">
        <h5>ورود به حساب</h5>
    </div>
    <form class="sign-form widget-form " method="post">
        
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="form-group">
            <input asp-for="Input.Email" type="text" class="form-control" placeholder="نام کاربری *">
        </div>
        <div class="form-group">
            <input asp-for="Input.Password" type="password" class="form-control" placeholder="رمز عبور *">
        </div>
        <div class="sign-controls form-group">

            <a href="#" class="btn-link  ml-auto">رمز عبور خود را فراموش کرده اید؟</a>
        </div>
        <div class="form-group">
            <button type="submit" class="btn-custom">ورود به حساب</button>
        </div>

        <p class="form-group text-center">حساب کاربری ندارید؟ <a asp-page="./Register" class="btn-link">ثبت نام کنید</a> </p>

    </form>
</div>