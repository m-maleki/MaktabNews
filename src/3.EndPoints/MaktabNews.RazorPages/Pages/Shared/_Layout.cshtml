<head>
    <!-- Meta -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <!-- favicon -->
    <link rel="icon" sizes="16x16" href="~/assets/img/favicon.png">

    <!-- Title -->
    <title>نانپوست - وبلاگ (مجله) شخصی</title>

    <!-- CSS Plugins -->
    <link rel="stylesheet" href="~/assets/css/all.css">
    <link rel="stylesheet" href="~/assets/css/elegant-font-icons.css">
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/owl.carousel.css">

    <!-- main style -->
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link rel="stylesheet" href="~/assets/css/custom.css">
</head>

<body class="rtl">
<!-- Navigation-->
<nav class="navbar navbar-expand-lg fixed-top">
    <div class="container-fluid">
        <!--logo-->
        <div class="logo">
            <a href="/">
                <img src="~/assets/img/logo-dark.png" alt="" class="logo-dark">
                <img src="~/assets/img/logo-white.png" alt="" class="logo-white">
            </a>
        </div>
        <!--/-->
        <!--navbar-collapse-->
        <div class="collapse navbar-collapse" id="main_nav">
            <ul class="navbar-nav ml-auto mr-auto">
                <li class="nav-item dropdown">
                    <a href="/" class="nav-link"> صفحه نخست </a>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link  dropdown-toggle" href="post-default.html" data-toggle="dropdown"> دسته بندی ها</a>
                    <ul class="dropdown-menu fade-up">
                        @foreach (var category in await @CategoryAppServices.GetCategoriesForMenu(default))
                        {
                            <li>
                                <a class="dropdown-item" asp-page="Category" asp-route-id="@category.Id" >@category.Title</a>
                            </li>
                        }
                    </ul>
                </li>
                    
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link"> خبرنگاران </a>
                </li>
                    
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link"> درباره ما </a>
                </li>
                    
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link"> تماس با ما </a>
                </li>

            </ul>
        </div>
        <!--/-->
        <!--navbar-right-->
        <div class="navbar-right ml-auto">

            <partial name="_LoginPartial" />

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main_nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </div>
</nav>
<!--/-->
<!--grid-layout-->
<section class="section pt-50">
    <div class="container-fluid">
        <div class="row">
            
            @RenderBody()

        </div>
    </div>
</section>
<!--/-->

<!--/-->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="~/assets/js/jquery-3.5.0.min.js"></script>
<script src="~/assets/js/popper.min.js"></script>
<script src="~/assets/js/bootstrap.min.js"></script>

<!-- JS Plugins  -->
<script src="~/assets/js/ajax-contact.js"></script>
<script src="~/assets/js/owl.carousel.min.js"></script>
<script src="~/assets/js/switch.js"></script>

<!-- JS main  -->
<script src="~/assets/js/main.js"></script>
</body>

@await RenderSectionAsync("Scripts", required: false)


